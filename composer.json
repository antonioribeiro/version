{
    "name": "pragmarx/version",
    "description": "Take control over your Laravel app version",
    "keywords": [
        "laravel",
        "version",
        "versioning"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio Carlos Ribeiro",
            "email": "acr@antoniocarlosribeiro.com",
            "role": "Creator & Designer"
        }
    ],
    "require": {
        "php": ">=7.4|^8.2", 
        "laravel/framework": ">=5.5.33|^11.0", 
        "pragmarx/yaml": "^1.3",
        "symfony/process": "^3.3|^4.0|^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5|~6|~7|~8|~9|~10|~11", 
        "orchestra/testbench": "3.4.*|3.5.*|3.6.*|3.7.*|4.*|5.*|6.*|7.*|8.*|9.*" 
    },
    "autoload": {
        "psr-4": {
            "PragmaRX\\Version\\Package\\": "src/package",
            "PragmaRX\\Version\\Tests\\": "tests/"
        }
    },
    "extra": {
        "component": "package",
        "laravel": {
            "providers": [
                "PragmaRX\\Version\\Package\\ServiceProvider"
            ],
            "aliases": {
                "Version": "PragmaRX\\Version\\Package\\Facade"
            }
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "vendor/bin/phpunit"
        ]
    }
}
